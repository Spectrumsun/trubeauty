extends layout

block content
    .container
        h1 Reset your Password
        form.formInput( method="POST") 
            .form-group.col-md-6
                label(for='exampleInputEmail1') Password
                input.form-control(type='password' placeholder  name="password")
            .form-group.col-md-6
                label(for='exampleInputEmail1') Confirm Password
                input.form-control(type='password' placeholder name="confirmPassword")
                
            button.btn.btn-primary(type='submit') Submit
