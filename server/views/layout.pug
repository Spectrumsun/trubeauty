doctype html
html
	head
		title= `${title} | ${h.siteName}`
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
		link(rel='stylesheet', href='/dist/style.css')
		link(rel="shortcut icon" type="image/png" href="/images/icons/logo.png")
	body
		block header
			nav.navbar.navbar-expand-lg.navbar-dark.fixed-top.bg-dark
				a.navbar-brand(href='/ ') 
					<img src="/images/icons/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
				button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
					span.navbar-toggler-icon
				#navbarSupportedContent.collapse.navbar-collapse
					ul.navbar-nav.mr-auto
						li.nav-item.active
							a.nav-link(href='/')
								| Home 
						li.nav-item.active
							a.nav-link(href='/signup')
								| Sign up
						li.nav-item.active
							a.nav-link(href='/login')
								| Log in
					ul.nav.navbar-nav.navbar-right
						
						


		block messages
				br
				.container
					if locals.flashes
						- const categories = Object.keys(locals.flashes)
						each category in categories
							each message in flashes[category]
								.alert(class=`alert-${category}` )
									p.flash__text!= message
					.alert.alert-danger.collapse(role='alert' id="errors")
						

	


		block content
			h2 Tru Beauty

		block footer
			<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
			<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
			<script src="/javascript/modules/axios.min.js"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/dompurify/1.0.2/purify.min.js"></script>
			<script src="/javascript/student-app.js"></script>
