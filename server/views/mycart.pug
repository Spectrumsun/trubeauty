extends layout

block content
	.container
		h2 My Cart
		if products == null
			h4 No item in the Cart!!!!!
		else
			ul.list-group.col-md-6
				each val in products
					li.list-group-item.list-group-item-light
						strong Product Name: #{val.item.productname} | Quantity: #{val.qty} | Price: N #{val.price} 
						span.badge-badge-primary-badge-pill     
							strong X
					br

					
			br
			h3 
				strong Total Price N#{totalPrice}
			form(action=`/product/pay` method="POST")
				.form-group.col-md-6
					label(for='exampleInputEmail1')
					strong Location
					input.form-control(type='text' placeholder='Your Current Location' name="location")
				.form-group.col-md-6
					label(for='exampleInputEmail1')
					strong Address
					input.form-control(type='text' placeholder='Your Address' name="Address")
				.form-group.col-md-6
					label(for='exampleInputEmail1')
					strong Time
					input.form-control(type='text' placeholder='Only add time if you ordered a service' name="Time")
				.form-group.col-md-6
					label(for='exampleInputEmail1')
					strong Date
					input.form-control(type='text' placeholder='Only add Date if you ordered a service' name="Date")
				.form-group.col-md-6
					input.form-control(type='hidden' placeholder='Date' value=products._id name="id")
				button.btn.btn-success Pay






