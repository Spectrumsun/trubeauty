{
  "name": "truebeauty",
  "version": "1.0.0",
  "description": "A app to order beauty ",
  "main": "server.js",
  "scripts": {
    "lint": "eslint --fix server",
    "dev": "npm run dev:start",
    "dev:start": "nodemon --ignore lib --exec  babel-node server/server",
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel ./server -d ./build ./server -s",
    "build": "npm run clean && npm run build-server",
    "pre:build": "npm run build",
    "start": "npm run build && node build/server"
  },
  "author": "tru",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-runtime": "^6.26.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.1",
    "cors": "^2.8.4",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "express-validator": "^5.0.0",
    "mongoose": "^5.0.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "eslint": "^4.17.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-compat": "^2.2.0",
    "eslint-plugin-flowtype": "^2.43.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "morgan": "^1.9.0"
  }
}
