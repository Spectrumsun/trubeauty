doctype html
html
	head
		title Admin Panel
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous")
		link(rel='stylesheet' href='/dist/style2.css')
		link(rel="shortcut icon" type="image/png" href="/images/icons/logo.png")
	body
		block header
			nav.navbar.navbar-expand-lg.navbar-light.bg-light
				a.navbar-brand(href='/') 
					strong TruBeauty
				button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
					span.navbar-toggler-icon
				#navbarSupportedContent.collapse.navbar-collapse
					ul.navbar-nav.mr-auto
						li.nav-item.active
						a.nav-link(href='/admin')
							strong  Home 
							span.sr-only (current)
						li.nav-item.active
						a.nav-link(href='/admin/products')
							strong  Add Product 
							span.sr-only (current)
						li.nav-item.active
						a.nav-link(href='/admin/viewproduct')
							strong  View Product 
							span.sr-only (current)
					form.form-inline.my-2.my-lg-0
						input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')
						button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
						

		
						
						


		block messages
				
				.container
					if locals.flashes
						- const categories = Object.keys(locals.flashes)
						each category in categories
							each message in flashes[category]
								.alert(class=`alert-${category}` )
									p.flash__text!= message
					.alert.alert-danger.collapse(role='alert' id="errors")
						

	


		block content
			h2 Admin Page

